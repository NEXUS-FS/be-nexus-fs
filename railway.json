{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "be-nexus-fs/Dockerfile",
    "watchPatterns": [
      "be-nexus-fs/**",
      "Application/**",
      "Domain/**",
      "Infrastructure/**"
    ]
  },
  "deploy": {
    "startCommand": "dotnet be-nexus-fs.dll",
    "healthcheckPath": "/weatherforecast",
    "healthcheckTimeout": 100,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}